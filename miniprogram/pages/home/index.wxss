.container {
  width: 100%;
  height: 100vh;
  position: relative;
}
.container video {
  height: 200px;
  width: 100%;
}
.container .text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
  font: 14px;
  height: 30px;
  overflow: hidden;
  line-height: 30px;
  color: #9652ca;
  background: #e7ffc0;
}
.container .text-box {
  animation: textAnt 10s;
}
@keyframes textAnt{
  0% {
    transform: translateY(-0px);
  }
  25% {
    transform: translateY(-30px);
  }
  50% {
    transform: translateY(-60px);
  }
  75% {
    transform: translateY(-90px);
  }
  100% {
    transform: translateY(-120px);
  }
}